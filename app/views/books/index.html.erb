<div class="container px-5 px-sm-0">
  <%= flash[:notice] %>
  <% if @book.errors.any? %>
   <div class= "errors_explanation">
      <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
   </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
    <h1>Books</h1>
       <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
                <td><%= link_to image_tag(book.user.get_profile_image(80,80)), user_path(book.user) %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

